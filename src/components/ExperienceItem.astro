---
interface Props {
  title: string;
  description: string;
  company?: string;
  date: string;
}
const { title, description, company, date } = Astro.props;
---

<li class="mb-10 ms-4 flex gap-10">
  <div
    class="absolute w-3 h-3 bg-yellow-100 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
  >
  </div>
  <div class="w-[300px]">
    <h3 class="text-lg font-semibold text-yellow-100">{title}</h3>
    <h5 class="mb-2 text-lg font-bold tracking-tight text-white">
      {company}
    </h5>
    <time class="mb-1 text-sm font-normal leading-none text-gray-200"
      >{date}</time
    >
  </div>
  <p class="my-2 text-base font-normal text-gray-100 text-pretty">
    -{description}
  </p>
</li>
