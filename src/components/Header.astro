---
import "../styles/global.css";
---

<header
  class="flex justify-between items-center border-b border-b-[#141624] py-5 w-full xl:w-[1200px] mx-auto px-6 sticky top-0 bg-[#1a1c2d] z-50"
>
  <!-- Logo o nombre -->
  <a href="#top" class="text-yellow-100 font-bold text-xl">BLZ</a>

  <!-- Botón Toggle (solo visible en mobile) -->
  <button
    id="menuToggle"
    class="xl:hidden text-gray-200 hover:text-yellow-100 transition-colors duration-200"
  >
    ☰
  </button>

  <!-- Menú principal -->
  <nav
    id="navMenu"
    class="absolute top-[72px] left-0 w-full bg-[#1a1c2d] flex flex-col items-center gap-y-6 py-6
           transform scale-y-0 opacity-0 transition-all duration-300 origin-top
           xl:static xl:opacity-100 xl:scale-y-100 xl:flex-row xl:gap-x-10 xl:py-0 xl:w-auto"
  >
    <a href="#top" class="nav-link">Inicio</a>
    <a href="#experiencia" class="nav-link">Experiencia</a>
    <a href="#educacion" class="nav-link">Educación</a>
    <a href="#proyectos" class="nav-link">Proyectos</a>
    <a href="#contacto" class="nav-link">Contacto</a>
  </nav>
</header>
<script>
  const toggle = document.getElementById("menuToggle");
  const nav = document.getElementById("navMenu");

  if (toggle && nav) {
    toggle.addEventListener("click", () => {
      nav.classList.toggle("scale-y-0");
      nav.classList.toggle("opacity-0");
      nav.classList.toggle("scale-y-100");
      nav.classList.toggle("opacity-100");
    });
  }
</script>
